<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com.tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.android.popularmovies.MovieInfo">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/teal"
            android:id="@+id/rlTitle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Intersteller"
                android:textSize="@dimen/text_title"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="70dp"
                android:id="@+id/tvTitle"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_below="@+id/rlTitle"
            android:layout_margin="15dp"
            android:id="@+id/ivPoster"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTitle"
            android:layout_toRightOf="@+id/ivPoster"
            tools:text="2015"
            android:layout_margin="15dp"
            android:textSize="@dimen/text_year"
            android:id="@+id/tvYear"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvYear"
            android:layout_toRightOf="@+id/ivPoster"
            tools:text="8.7/10"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/text_rate"
            android:id="@+id/tvRating"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPoster"
            android:text="SYNOPSIS"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/tvSynopsis"/>

    </RelativeLayout>
</ScrollView>
